{
  "type": "module",
  "name": "pragmatic-ui",
  "version": "1.0.0",
  "description": "A set of themed React components for building beautiful projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jestconfig.json",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jestconfig.json --watch",
    "build": "tsc --emitDeclarationOnly && ./node_modules/.bin/esbuild ./src/index.js --format=esm --bundle --outfile=./dist/index.js --target=es6 --minify",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psnfrench/pragmatic-ui.git"
  },
  "keywords": [
    "React",
    "Components",
    "UI",
    "Pragmatic"
  ],
  "author": "Paul French",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/psnfrench/pragmatic-ui/issues"
  },
  "homepage": "https://github.com/psnfrench/pragmatic-ui#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "esbuild": "^0.14.27",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.2"
  }
}
